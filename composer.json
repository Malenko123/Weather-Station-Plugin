{
    "name": "kliment/weather-station-plugin",
    "description": "WordPress plugin for displaying weather stations on an interactive map",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
    },
    "autoload": {
        "psr-4": {
            "WeatherStation\\": "includes/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "phpcs --standard=WordPress .",
        "lint-fix": "phpcbf --standard=WordPress ."
    }
}